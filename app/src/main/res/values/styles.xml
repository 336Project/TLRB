<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
        <item name="actionBarSize">@dimen/actionBarSize</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--大标题样式-->
    <style name="TitleStyle">
        <item name="android:textColor">@color/Grey_900</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <!--小标题样式(内容)-->
    <style name="SubheadStyle">
        <item name="android:textColor">@color/Grey_600</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>
    <!--说明文字样式-->
    <style name="CaptionStyle">
        <item name="android:textColor">@color/Grey_400</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="TitleStyle.Light">
        <item name="android:textColor">@color/Grey_50</item>
    </style>

    <style name="SubheadStyle.Light">
        <item name="android:textColor">@color/Grey_50</item>
    </style>

    <style name="CaptionStyle.Light">
        <item name="android:textColor">@color/Grey_50</item>
    </style>

    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/action_button_height</item>
        <item name="android:minWidth">@dimen/action_button_min_width</item>
        <item name="android:paddingLeft">@dimen/action_button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/action_button_padding_horizontal</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">@dimen/action_button_text_size</item>
    </style>

    <style name="RippleViewStyle">
        <item name="rv_centered">false</item>
        <item name="rv_color">@color/Blue_Grey_200</item>
        <item name="rv_rippleDuration">500</item>
    </style>

    <style name="LineStyle">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/Grey_200</item>
    </style>

    <!-- 添加红包界面 -->
    <!-- textview 的界面 -->
    <style name="add_red_bomb_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/add_redbomb_text_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">@dimen/add_redbomb_textsize</item>
        <item name="android:textColor">@color/black_de</item>
    </style>

    <!-- edittext 的界面 -->
    <style name="add_red_bomb_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">@dimen/add_redbomb_radiobutton_padding</item>
        <item name="android:layout_marginLeft">@dimen/add_redbomb_radiobutton_padding</item>
        <item name="android:drawableRight">@drawable/personal_center_revocation_icon</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">10dp</item>
        <!--<item name="android:colorAccent">#3498db</item>-->
    </style>

    <style name="style_circle_header">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="roundingBorderColor">@color/white</item>
        <item name="placeholderImage">@drawable/icon_user</item>
        <item name="placeholderImageScaleType">fitXY</item>
        <item name="actualImageScaleType">fitXY</item>
        <item name="failureImage">@drawable/icon_user</item>
        <item name="failureImageScaleType">fitXY</item>
        <item name="roundAsCircle">true</item>
        <!--<item name="roundingBorderWidth">1dp</item>-->
    </style>

    <style name="UserInfoTextViewTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="UserInfoTextViewContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#8A8A8A</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="UserInfoImageView">
        <item name="android:src">@drawable/userinfo_item_arrow</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
