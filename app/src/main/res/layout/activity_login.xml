<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_home_page"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ttm.tlrb.ui.activity.LoginActivity">

    <TextView
        android:id="@+id/textView_register"
        style="@style/TitleStyle.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/font_20"
        android:text="@string/register"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >

        <TextView
            style="@style/TitleStyle.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="登录"
            android:textSize="@dimen/font_24"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/register_bg_shape"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/login_main_phone"
                    />

                <EditText
                    android:id="@+id/editText_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="80"
                    android:background="@color/transparent"
                    android:hint="请填写账号"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/register_cursor_color"
                    android:textSize="@dimen/font_14"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/login_main_code"
                    />

                <EditText
                    android:id="@+id/editText_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="80"
                    android:background="@color/transparent"
                    android:hint="请填写密码"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/register_cursor_color"
                    android:textSize="@dimen/font_14"
                    />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_retrieve_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="忘记密码?"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_primary_selector"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_sina"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/umeng_socialize_sina"/>

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/umeng_socialize_qq"/>

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/umeng_socialize_wechat"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
