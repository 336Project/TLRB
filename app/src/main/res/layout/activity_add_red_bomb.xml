<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/Grey_300">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@color/Grey_300">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_other_bg"
            android:layout_marginTop="@dimen/add_redbomb_radiobutton_padding"
            android:orientation="horizontal">
            <TextView
                style="@style/add_red_bomb_text"
                android:text="@string/name"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ttm.tlrb.view.CleanableEditText
                    style="@style/add_red_bomb_edittext"
                    android:hint="@string/name"/>
            </android.support.design.widget.TextInputLayout>

            <!--<android.support.design.widget.TextInputEditText
                android:id="@+id/et_name"
                style="@style/add_red_bomb_edittext"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:background="@drawable/shape_rectangular_red_radius"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_men"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/shape_rectangular_red_radiusleft"
                android:text="@string/men"/>

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/Red_400"/>

            <TextView
                android:id="@+id/tv_women"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/black_de"
                android:gravity="center"
                android:clickable="true"
                android:text="@string/women"/>

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/Red_400"/>

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/black_de"
                android:gravity="center"
                android:clickable="true"
                android:text="@string/all"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_other_bg"
            android:orientation="horizontal">
            <TextView
                style="@style/add_red_bomb_text"
                android:text="@string/money"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ttm.tlrb.view.CleanableEditText
                    style="@style/add_red_bomb_edittext"
                    android:inputType="numberDecimal"
                    android:hint="@string/money"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:background="@drawable/shape_rectangular_red_radius"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_income"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/shape_rectangular_red_radiusleft"
                android:text="@string/income"/>

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/Red_400"/>

            <TextView
                android:id="@+id/tv_spending"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/black_de"
                android:gravity="center"
                android:clickable="true"
                android:text="@string/spending"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_other_bg"
            android:orientation="horizontal">
            <TextView
                style="@style/add_red_bomb_text"
                android:text="@string/gift"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ttm.tlrb.view.CleanableEditText
                    style="@style/add_red_bomb_edittext"
                    android:hint="@string/gift"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_other_bg"
            android:orientation="horizontal">
            <TextView
                style="@style/add_red_bomb_text"
                android:visibility="visible"
                android:textSize="@dimen/add_redbomb_title_text"
                android:text="@string/categoryName"/>

            <Spinner
                android:id="@+id/sp_addType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </Spinner>

            <TextView
                android:id="@+id/tv_addType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/shape_rectangular_blue_radius"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:clickable="true"
                android:text="@string/add_type"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_other_bg"
            android:orientation="horizontal">
            <TextView
                style="@style/add_red_bomb_text"
                android:text="@string/time"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <com.ttm.tlrb.view.CleanableEditText
                    style="@style/add_red_bomb_edittext"
                    android:focusable="false"
                    android:hint="@string/time"/>
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/add_redbomb_radiobutton_padding"
                android:layout_gravity="center"
                android:src="@drawable/ic_date"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_other_bg"
            android:orientation="horizontal">
            <TextView
                style="@style/add_red_bomb_text"
                android:text="@string/remark"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ttm.tlrb.view.CleanableEditText
                    style="@style/add_red_bomb_edittext"
                    android:hint="@string/remark"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                style="@style/add_red_bomb_text"
                android:visibility="visible"
                android:text="@string/sex"/>

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_boy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|left"
                    android:textSize="@dimen/add_redbomb_textsize"
                    android:checked="true"
                    android:text="@string/men"/>

                <RadioButton
                    android:id="@+id/rb_gril"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|left"
                    android:textSize="@dimen/add_redbomb_textsize"
                    android:layout_marginLeft="@dimen/add_redbomb_radiobutton_padding"
                    android:text="@string/women"/>
                <RadioButton
                    android:id="@+id/rb_all"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|left"
                    android:layout_marginLeft="@dimen/add_redbomb_radiobutton_padding"
                    android:textSize="@dimen/add_redbomb_textsize"
                    android:text="@string/all"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                style="@style/add_red_bomb_text"
                android:visibility="visible"
                android:text="@string/type"/>

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_spending"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|left"
                    android:textSize="@dimen/add_redbomb_textsize"
                    android:checked="true"
                    android:text="@string/spending"/>

                <RadioButton
                    android:id="@+id/rb_income"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|left"
                    android:layout_marginLeft="@dimen/add_redbomb_radiobutton_padding"
                    android:textSize="@dimen/add_redbomb_textsize"
                    android:text="@string/income"/>

            </RadioGroup>

        </LinearLayout>
    </LinearLayout>
</ScrollView>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_rectangular_blue_radius"
        android:textSize="@dimen/font_18"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/commit"/>

    <LinearLayout
        android:id="@+id/layout_updateAndDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_rectangular_blue_radius"
            android:textSize="@dimen/font_18"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/modify"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_rectangular_allred_radius"
            android:textSize="@dimen/font_18"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/delete"/>
    </LinearLayout>
</LinearLayout>