<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="20dp"
    tools:context="com.ttm.tlrb.ui.activity.UserInfoActivity">


        <EditText
            android:id="@+id/editText_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新的用户名"
            style="@style/TitleStyle"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="限4-16个字符，一个汉字为两个字符"
            android:layout_marginTop="15dp"
            style="@style/SubheadStyle"
            />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_primary_selector"
            android:text="确定"
            android:layout_marginTop="15dp"
            style="@style/TitleStyle.Light"
            />
</LinearLayout>
