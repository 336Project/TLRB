<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:fresco="http://schemas.android.com/apk/res-auto">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/photo_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        fresco:placeholderImage="@mipmap/imageselector_photo"
        fresco:placeholderImageScaleType="centerInside"
        fresco:failureImage="@mipmap/imageselector_photo"
        fresco:failureImageScaleType="centerInside"
        fresco:actualImageScaleType="centerInside"
        fresco:fadeDuration="300"
         />

    <View
        android:id="@+id/photo_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/photo_mask"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/photo_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:contentDescription="@null"
        android:src="@mipmap/imageselector_select_uncheck" />

</FrameLayout>